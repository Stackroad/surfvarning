  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/client.js"></script>

</head>
<body>
  <div class="container">
    <div class="header">
      <section class="header">
        <h1 class="title">Surfvarning Admin</h1>
        <h4> YOU ARE INSIDE</h4>
      </section>
    </div>
    <div class="section-container">
      <table class="u-full-width">
        <thead>
          <tr>
            <th>Date</th>
            <th>Wind</th>
            <th>Wind Direction</th>
            <th>Surf Spot</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#spot}}
          <tr>
            <td>{{date}}</td>
            <td>{{wind}}</td>
            <td>{{wind_direction}}</td>
            <td>{{surfspot}}</td>
          </tr>
          {{/spot}}
        </tbody>
      </table>
    </div>
    <div class="section-container">
      <table class="u-full-width">
        <thead>
          <tr>
            <th>Email</th>
            <th>Spot</th>
            <th>Created</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#entries}}
          <tr>
            <td>{{email}}</td>
            <td>{{spot}}</td>
            <td>{{createdAt}}</td>
            <td><button type="button" onclick="deleteEntry(this)" data-id="{{id}}">Del</button></td>
          </tr>
          {{/entries}}
        </tbody>
      </table>
    </div>
  </div>

</body>
